    <script type="text/javascript">
        $(function () {

            var dtHoje = new Date();
            
            var @ViewBag.MesAtual = dtHoje.getMonth();

        })


    </script>
    <main class="page-content">
        <div class="box-conteudo">
                <div class="row">
                    <div class="col-md-3">
                        <div class="card-counter primary">
                            <i class="fa fa-code-fork"></i>
                            <span class="count-numbers">R$ @gasto</span>
                            <span class="count-name">Total de Gastos</span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card-counter danger">
                            <i class="fa fa-ticket"></i>
                            <span class="count-numbers">R$ @totalMesAtual</span>
                            <span class="count-name">@mesAtual (@anoAtual)</span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card-counter success">
                            <i class="fa fa-database"></i>
                            <span class="count-numbers">R$ </span>
                            <span class="count-name">Mês anterior</span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card-counter info">
                            <i class="fa fa-users"></i>
                            <span class="count-numbers">35</span>
                            <span class="count-name">Users</span>
                        </div>
                    </div>
                </div>
            <div class="box-shadow-full" style="width: 100%; margin-top:30px;">
                <table id="mytable" class="table table-striped table-bordered table-list">
                    <thead>
                        <tr>

                            <th class="hidden-xs">Data</th>
                            <th class="col-text">Descrição</th>
                            <th class="hidden-xs">Loja</th>
                            <th class="col-text">Categoria</th>
                            <th class="col-text">Necessidade</th>
                            <th class="col-text">Tipo</th>
                            <th class="col-text">Forma de Pagamento</th>
                            <th class="col-text">Preço</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var desc in Model)
                        {
                            <tr>
                                <td>@desc.Datac</td>
                                <td>@desc.Descr</td>
                                <td>@desc.Loja</td>
                                <td>@desc.Categoria</td>
                                <td>@desc.Necessidade</td>
                                <td>@desc.Tipo</td>
                                <td>@desc.Forma_pgto</td>
                                <td>@desc.Preco</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>
